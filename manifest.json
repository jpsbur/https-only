{
  "manifest_version": 2,
  "name": "HTTPS only",
  "version": "0.1",
  "icons": {
    "128": "icon128.png"
  },

  "description": "Block or redirect non-HTTPS requests",

  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["main.js"],
    "persistent": true
  },

  "options_page": "options.html"
}
